    }
    .side-content{
        font-size: large;
        font-weight: bold;
        text-align: center;
        background-color: palevioletred;
        color: pink;
        display: grid;
         grid-template-columns: repeat(2, 1fr);
         gap: 5px;
        text-align: center;
        display: block;
    }
